cfg = get_sml_config('bio.ngs.methylseq.rnbeads')

rule rnbeads_list_options:
    run:
      print (cfg)
      
rule rnbeads_create_reportdir:
    """Create report directory.
    
    Run rnb.initialize.reports
    """
    run:
      reportdir = os.path.join(cfg['analysisdir'], cfg['reportdirname'])
      R("""
      library(RnBeads)
      report.dir <- file.path('{reportdir}')
      rnb.initialize.reports(report.dir)
      """)

rule rnbeads_run_analysis:
