# -*- snakemake -*-
import os
from snakemakelib.config import update_sml_config, get_sml_config

# Predefined settings for various platforms
# Docs needed:
#   run_id_re: regular expression for how to extract read group information from run id file names
#   run_id_pfx_fmt: based on the results of run_id_re, make prefix formats as python mini-format strings for run_id
#   sample_pfx_ftm: ditto for sample
#
# FIXME: move to module?
platforms = {
    # generic currently almost identical to Illumina
    'generic' : {
        'run_id_re' : "(?P<PATH>.*)(?P<NA>[0-9])_(?P<DT>[0-9]+)_(?P<PU>[A-Z0-9]+XX)_(?P<SM>P[0-9]+_[0-9]+)",
        'run_id_pfx_re' : "(?P<PATH>.*)(?P<NA>[0-9])_(?P<PU>[0-9]+_[A-Z0-9]+XX)_(?P<SM>P[0-9]+_[0-9]+)",
        'run_id_pfx_fmt' : os.path.join("{PATH}", "{SM}", "{PU}", "{PU}_{SM}"),
        'sample_pfx_fmt' : os.path.join("{PATH}", "{SM}", "{SM}"),
        'platform_unit_fn' : lambda x: {'PU':x[1]},
    },
    'Illumina' : {
        'run_id_re' : "(?P<PATH>.*)(?P<PU1>[0-9])_(?P<DT>[0-9]+)_(?P<PU2>[A-Z0-9]+XX)_(?P<SM>P[0-9]+_[0-9]+)",
        'run_id_pfx_re' : "(?P<PATH>.*)(?P<PU1>[0-9])_(?P<PU2>[0-9]+_[A-Z0-9]+XX)_(?P<SM>P[0-9]+_[0-9]+)",
        'run_id_pfx_fmt' : os.path.join("{PATH}", "{SM}", "{PU2}", "{PU1}_{PU2}_{SM}"),
        'sample_pfx_fmt' : os.path.join("{PATH}", "{SM}", "{SM}"),
        # FIXME: Hack to get PU from values passed to command line
        'platform_unit_fn' : lambda x: {'PU1':x[2], 'PU2':x[1]},
    },
    'PacBio' : {
        'run_id_re' : "",
    },
    'SOLiD' : {
        'run_id_re' : "",
    },
}

